{
  "name": "api-boilerplate",
  "version": "1.0.0",
  "description": "Node API Boilerplate by Nave",
  "main": "api/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/naveteam/back-boilerplate.git"
  },
  "scripts": {
    "start": "babel-node src/index.js",
    "dev": "nodemon src/index.js --exec babel-node src/index.js",
    "pm2": "pm2 start --interpreter babel-node src/index.js",
    "test": "jest --detectOpenHandles --runInBand",
    "createdb": "bash database/scripts/database.sh",
    "knex": "PATH_ENV='../.env' babel-node node_modules/.bin/knex --knexfile database/knexfile.js",
    "migrate": "PATH_ENV='../.env' babel-node node_modules/.bin/knex --knexfile database/knexfile.js migrate:latest ",
    "seed": "PATH_ENV='../.env' babel-node node_modules/.bin/knex --knexfile database/knexfile.js seed:run ",
    "deploy": "git push heroku master"
  },
  "license": "ISC",
  "engines": {
    "node": ">=10.13.0"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "bcrypt": "^3.0.0",
    "bookshelf": "^0.13.3",
    "bookshelf-uuid": "^1.0.0",
    "dotenv": "^6.1.0",
    "joi": "^13.6.0",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.15.2",
    "koa": "^2.5.3",
    "koa-body": "^4.0.6",
    "koa-bodyparser": "^4.2.1",
    "koa-joi-validate": "github:naveteam/koa-joi-validate",
    "koa-jwt": "^3.5.1",
    "koa-logger": "^3.2.0",
    "koa-mount": "^3.0.0",
    "koa-respond": "^1.0.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "path": "^0.12.7",
    "pg": "^7.4.3",
    "rollbar": "^2.4.6",
    "sqlite3": "^4.0.4",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "supertest": "^3.3.0"
  }
}
